<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QR Code Database | CropShree</title>
    <link rel="stylesheet" href="/css/styleViewDB.css" />
    <!-- Add Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body>
    <!-- Enhanced Navigation -->
    <nav class="navbar">
      <div class="navbar-brand">
        <i class="fas fa-qrcode"></i>
        QR Code Database
      </div>
      <div class="navbar-buttons">
        <a href="/dashboard">
          <i class="fas fa-tachometer-alt"></i>
          Dashboard
        </a>
        <a href="/logoutSure" class="logout-btn">
          <i class="fas fa-sign-out-alt"></i>
          Logout
        </a>
      </div>
    </nav>

    <!-- Enhanced Search Section -->
    <div class="search-section">
      <form method="GET" action="/qrdatabase" class="search-form">
        <div class="search-container">
          <i class="fas fa-search search-icon"></i>
          <input
            type="text"
            name="batch"
            placeholder="Search by Batch No..."
            value="<%= queryBatch || '' %>"
            class="search-input"
          />
          <button type="submit" class="search-btn">
            <i class="fas fa-search"></i>
            Search
          </button>
        </div>
      </form>
    </div>

    <div class="container">
      <!-- Enhanced Header -->
      <div class="header-section">
        <h2>
          <i class="fas fa-qrcode"></i>
          QR Code Records
        </h2>

        <!-- Add this button -->
        <button class="delete-all-btn" onclick="confirmDeleteAll()">
          <i class="fas fa-trash-alt"></i>
          Delete All QR Codes
        </button>

        <div class="stats-info">
          <div class="stat-item">
            <i class="fas fa-qrcode"></i>
            <span class="stat-number"><%= qrData.length %></span>
            <span class="stat-label">Total QR Codes</span>
          </div>
        </div>
      </div>

      <!-- Enhanced Table Container -->
      <div class="table-container">
        <table class="data-table">
          <thead>
            <tr>
              <th>
                <i class="fas fa-hashtag"></i>
                ID
              </th>
              <th>
                <i class="fas fa-tags"></i>
                Batch Number
              </th>
              <th>
                <i class="fas fa-image"></i>
                QR Preview
              </th>
              <th>
                <i class="fas fa-eye"></i>
                Actions
              </th>
            </tr>
          </thead>
          <tbody>
            <% if (qrData.length === 0) { %>
            <tr>
              <td colspan="4" class="empty-row">
                <div class="empty-state">
                  <i class="fas fa-qrcode"></i>
                  <h3>No QR Codes found</h3>
                  <p>Try adjusting your search criteria</p>
                </div>
              </td>
            </tr>
            <% } else { %> <% qrData.forEach((record, index) => { %>
            <tr class="table-row" data-index="<%= index %>">
              <td data-label="ID">
                <span class="id-badge">#<%= record.id %></span>
              </td>
              <td data-label="Batch Number">
                <span class="batch-number"><%= record.batch %></span>
              </td>
              <td data-label="QR Preview">
                <img
                  src="<%= record.qrPath %>"
                  alt="QR for <%= record.batch %>"
                  style="
                    width: 100px;
                    height: auto;
                    border: 1px solid #00089933;
                    border-radius: 8px;
                  "
                />
              </td>
              <td data-label="Actions">
                <button
                  class="view-btn"
                  onclick="location.href='/adminclientui_qr?b=<%= record.batch %>'"
                >
                  <i class="fas fa-eye"></i>
                  View Details
                </button>
              </td>
            </tr>
            <% }); %> <% } %>
          </tbody>
        </table>
      </div>

      <!-- Footer Info -->
      <div class="footer-info">
        <p>
          <i class="fas fa-info-circle"></i>
          Showing <%= qrData.length %> QR Code(s) <% if (queryBatch) { %> for
          batch: "<%= queryBatch %>" <% } %>
        </p>
      </div>
    </div>

    <!-- Loading Animation -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const rows = document.querySelectorAll(".table-row");
        rows.forEach((row, index) => {
          row.style.animationDelay = `${index * 0.1}s`;
        });
      });

      const searchInput = document.querySelector(".search-input");
      if (searchInput) {
        searchInput.addEventListener("keypress", function (e) {
          if (e.key === "Enter") {
            this.closest("form").submit();
          }
        });
      }
    </script>

    <script>
      function confirmDeleteAll() {
        if (
          confirm(
            "Are you sure you want to delete ALL QR codes? This action cannot be undone!"
          )
        ) {
          // User clicked "OK"
          window.location.href = "/deleteAllQRCodes";
        } else {
          // User clicked "Cancel"
          return false;
        }
      }
    </script>
  </body>
</html>
