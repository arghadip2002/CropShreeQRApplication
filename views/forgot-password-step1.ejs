<%- include('partials/header') %>

  <div class="password-card">
    <img src="images/logo.png" alt="Logo" width="100px" />
    <h2>Forgot Password</h2>
    <p class="subtitle">Step 1: Verify Admin Code</p>
    
    <form action="/forgot-password/verify-code" method="POST">
      <div class="form-group">
        <label for="adminCode">
          <i class="fas fa-key"></i> Admin Code
        </label>
        <input
          type="text"
          id="adminCode"
          name="adminCode"
          placeholder="Enter Admin Code (Case Sensitive)"
          required
          autocomplete="off"
        />
        <small class="helper-text">⚠️ Admin code is case sensitive</small>
      </div>
      
      <button type="submit" class="btn-primary">
        <i class="fas fa-arrow-right"></i> Verify Code
      </button>
    </form>
    
    <div class="login-links">
      <a href="/login">
        <i class="fas fa-arrow-left"></i> Back to Login
      </a>
    </div>
  </div>

<style>
  .password-container {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 20px;
  }
  
  .password-card {
    background: white;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    max-width: 600px;
    width: 100%;
    text-align: center;
  }
  
  .password-card img {
    margin-bottom: 20px;
  }
  
  .password-card h2 {
    color: #333;
    margin-bottom: 10px;
    font-size: 28px;
  }
  
  .subtitle {
    color: #666;
    margin-bottom: 30px;
    font-size: 16px;
  }
  
  .form-group {
    margin-bottom: 25px;
    text-align: left;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 8px;
    color: #333;
    font-weight: 600;
    font-size: 14px;
  }
  
  .form-group label i {
    margin-right: 5px;
    color: #667eea;
  }
  
  .form-group input {
    width: 100%;
    padding: 12px 15px;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    font-size: 15px;
    transition: all 0.3s;
    box-sizing: border-box;
  }
  
  .form-group input:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }
  
  .helper-text {
    display: block;
    margin-top: 5px;
    color: #ff6b6b;
    font-size: 12px;
  }
  
  .btn-primary {
    width: 100%;
    padding: 14px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    margin-top: 10px;
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
  }
  
  .btn-primary i {
    margin-left: 8px;
  }
  
  .login-links {
    margin-top: 25px;
    padding-top: 25px;
    border-top: 1px solid #e0e0e0;
  }
  
  .login-links a {
    color: #667eea;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s;
  }
  
  .login-links a:hover {
    color: #764ba2;
    text-decoration: underline;
  }
  
  .login-links a i {
    margin-right: 5px;
  }
</style>

<%- include('partials/footer') %>