<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= product.product_name %> - Product Details</title>
    <link rel="stylesheet" href="/css/clientui.css" />
  </head>
  <body>
    <div class="container">
      <a href="/view_database" class="back-button">‚Üê Back to Database</a>

      <div class="product-card">
        <div class="product-header">
          <h2>Product Information</h2>
          <img
            src="product_jpeg/<%= product.product_type %>.jpeg"
            alt="<%= product.product_name %>"
            class="product-image"
          />
        </div>

        <table class="product-info">
          <tbody>
            <tr>
              <th>Product Name</th>
              <td><%= product.product_name %></td>
            </tr>
            <tr>
              <th>Batch Code</th>
              <td><%= product.batch %></td>
            </tr>
            <tr>
              <th>GTIN</th>
              <td><%= product.gtin %></td>
            </tr>
            <tr>
              <th>Brand Name</th>
              <td>Cropshree Lifesciences Pvt. Ltd.</td>
            </tr>
            <tr>
              <th>Marketed by</th>
              <td>Cropshree Lifesciences Pvt. Ltd.</td>
            </tr>
            <tr>
              <th>Manufactured</th>
              <td><%= product.mfg_date%></td>
            </tr>
            <tr>
              <th>Expires</th>
              <td><%= product.exp_date%></td>
            </tr>
            <tr>
              <th>Leaflet</th>
              <td>
                <a
                  href="/product_pdf/<%= product.product_type %>.pdf"
                  class="leaflet-link"
                  download
                >
                  Download Product Leaflet
                </a>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="qr-section">
        <div class="qr-container">
          <img
            src="/qrImages/<%= product.batch %>_qr.png"
            alt="QR Code for <%= product.product_name %>"
            class="qr-image"
          />
        </div>
        <div class="action-buttons">
          <a href="/deleteQR?batch=<%= product.batch %>" class="btn btn-danger">
            Delete QR
          </a>
          <a href="/generateQR?batch=<%= product.batch %>" class="btn btn-info">
            Generate QR
          </a>
          <a
            href="/downloadQR?batch=<%= product.batch %>"
            class="btn btn-primary"
          >
            Download QR
          </a>
        </div>
      </div>

          <div class="link-copy-container">
        <input
            type="text"
            id="qrLink"
            class="qr-link-input"
            value="<%= domain %>/v/?b=<%= product.batch %>"
            readonly
        />
        <button class="copy-btn" onclick="copyToClipboard('qrLink', this)">
            <i class="fas fa-copy"></i> Copy Link
        </button>
    </div>
    </div>
    <script>
    function copyToClipboard(elementId, buttonElement) {
        // 1. Get the text from the specified input element
        const copyText = document.getElementById(elementId).value;

        // 2. Use the modern Clipboard API
        navigator.clipboard.writeText(copyText)
            .then(() => {
                // 3. Provide success feedback on the button
                const originalText = buttonElement.innerHTML;
                buttonElement.innerHTML = '<i class="fas fa-check"></i> Copied!';
                buttonElement.classList.add('copied');

                // 4. Reset button text and style after a short delay
                setTimeout(() => {
                    buttonElement.innerHTML = originalText;
                    buttonElement.classList.remove('copied');
                }, 1500); // 1.5 seconds delay
            })
            .catch(err => {
                console.error('Could not copy text: ', err);
                alert('Failed to copy the link. Please copy it manually.');
            });
    }
</script>
  </body>
</html>
